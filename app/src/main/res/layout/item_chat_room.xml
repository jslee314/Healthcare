<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_chatRoom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_chat_room_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_other_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="other user"
        app:layout_constraintStart_toEndOf="@id/iv_chatRoom"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last message"
        app:layout_constraintStart_toEndOf="@+id/iv_chatRoom"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_user"
        app:layout_constraintBottom_toBottomOf="@+id/iv_chatRoom"/>

</androidx.constraintlayout.widget.ConstraintLayout>